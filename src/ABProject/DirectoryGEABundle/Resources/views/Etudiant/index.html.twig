{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Etudiant list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_etudiant</th>
                <th>Prenom_etudiant</th>
                <th>Niveau_etude</th>
                <th>Contact</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('etudiant_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nometudiant }}</td>
                <td>{{ entity.prenometudiant }}</td>
                <td>{{ entity.niveauetude }}</td>
                <td>{{ entity.contact }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('etudiant_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('etudiant_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('etudiant_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
